<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
   android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:orientation="horizontal"
    android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:paddingRight="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_5"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="90dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:visibility="gone"
                android:background="@drawable/bt_radialoff"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/good_img"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80" />
            <LinearLayout
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/good_name"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/good_price"
                        android:layout_alignParentRight="true"
                        android:text="ï¿¥120"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/sku_ll"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <com.jpp.mall.view.AmountView
                        android:id="@+id/amout_view"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        app:btnTextSize="14sp"
                        app:btnWidth="@dimen/dp_20"
                        app:tvWidth="@dimen/dp_30"
                        android:layout_marginRight="15dp"
                        android:layout_height="@dimen/dp_30"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <CheckBox
        android:id="@+id/rb_cart"
        android:button="@drawable/cb_selector"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />
</LinearLayout>