<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.jpp.mall.acitivity.CredibilityQuerryActivity">

    <include layout="@layout/common_title"/>
    <View
        android:background="@color/color_33"
        android:layout_width="match_parent"
        android:layout_height=".5dp"/>


    <LinearLayout
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/rec_with_raduis_white_fff"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <ImageView
                android:id="@+id/ic_search"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_search"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />

            <EditText
                android:id="@+id/input_num"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_10"
                android:hint="请输入员工编号"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <View
            android:background="@color/color_33"
            android:layout_width="match_parent"
            android:layout_height=".5dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/seller_info_rv"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>


</LinearLayout>
