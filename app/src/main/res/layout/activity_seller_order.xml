<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include layout="@layout/common_title"/>

    <View
        android:background="@color/color_33"
        android:layout_width="match_parent"
        android:layout_height=".5dp"/>

    <RadioGroup
        android:background="@color/color_white"
        android:id="@+id/seller_rg"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/order_pay"
            android:drawableTop="@drawable/seller_order_pay"
            android:drawablePadding="@dimen/dp_10"
            android:text="待付款"
            android:textColor="@drawable/order_tv"
            android:layout_width="0dp"
            android:button="@null"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/deliver_rb"
            android:drawableTop="@drawable/seller_order_delivery"
            android:drawablePadding="@dimen/dp_10"
            android:text="待发货"
            android:button="@null"
            android:textSize="@dimen/sp_14"
            android:textColor="@drawable/order_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/recept_rb"
            android:drawableTop="@drawable/seller_order_recept"
            android:drawablePadding="@dimen/dp_10"
            android:text="待收货"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@drawable/order_tv"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/complete_rb"
            android:drawableTop="@drawable/usr_info_complete"
            android:drawablePadding="@dimen/dp_10"
            android:text="已完成"
            android:textSize="@dimen/sp_14"
            android:button="@null"
            android:textColor="@drawable/order_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent" />

    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/seller_order_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>
