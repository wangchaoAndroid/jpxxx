<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/color_f1f1f1"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:paddingRight="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_code"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_5"
                android:textSize="@dimen/sp_16"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/color_33"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_time"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_5"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_66"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/sell_order_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="90dp">

            <ImageView
                android:id="@+id/good_img"
                android:src="@drawable/ic_launcher"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80" />

            <LinearLayout
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/good_name"
                        android:textSize="@dimen/sp_14"
                        android:text="华为P10红色内屏"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/good_price"
                        android:layout_alignParentRight="true"
                        android:text="￥120"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/good_desc"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:text="属性:xx"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/good_color"
                        android:text="颜色:xx"
                        android:textSize="@dimen/sp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/good_num"
                        android:text="x2"
                        android:textSize="@dimen/sp_14"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/good_total"
            android:text="合计: ￥480"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sure_recept"
                android:text="确认收货"
                android:textSize="@dimen/sp_14"
                android:padding="@dimen/dp_10"
                android:background="@drawable/rec_with_raduis_stroken"
                android:textColor="@color/color_fc81d"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>